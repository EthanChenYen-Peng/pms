<h2> <%= @project.title %></h2>
<hr/>
<div class='mb-5'>
  <p><%= @project.content %></p>
</div>

<% if @project.labels.any?  %>
  <h2><%= t('labels') %> :</h2>
  <div class="labels my-2">
    <%= render @project.labels, project: @project %>
  </div>
<% end %>
<% if @project.start_date %>
  <div>
    <%= t('start_date')%>: <%= better_distance_of_time_in_words(@project.start_date) %>
  </div>
<% end %>
<% if @project.due_date %>
  <div>
    <%= t('due_date')%>: <%= better_distance_of_time_in_words(@project.due_date) %>
  </div>
<% end %>
<div>
 <%= t('status') %>: <%= enum_name('project', 'status', @project.status) %>
</div>
<div>
 <%= t('priority') %>: <%= enum_name('project', 'priority', @project.priority) %>
</div>
<div class="mt-3">
  <% if current_user == @project.user %>
    <%= link_to t('links.project.edit'), edit_project_path(@project),  class: 'btn btn-info mr-2'  %>
    <%= link_to t('links.project.delete'), project_path(@project), method: :delete, class: 'btn btn-danger' %>
  <% end %>
</div>
