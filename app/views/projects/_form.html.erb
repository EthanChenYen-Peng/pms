<%= form_with(model: project, local: true) do |f|  %>
  <% if project.errors.any? %>
    <%= render 'shared/errors', errors: project.errors.full_messages %>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <%= f.submit %>
<% end %>
