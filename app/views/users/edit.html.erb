<h1>Edit profile</h1>
<div class="mt-3 p-5">
  <%= form_with(model: current_user, local: true) do |f|  %>
    <% if current_user.errors.any? %>
      <%= render 'shared/errors', errors: current_user.errors %>
    <% end %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control #{'is-invalid' if current_user.errors[:username].any?}"  %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control #{'is-invalid' if current_user.errors[:email].any?}"  %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control #{'is-invalid' if current_user.errors[:password].any?}"  %>
    </div>
    <%= f.submit t('links.users.update'), class: 'btn btn-info' %>
  <% end %>
</div>
