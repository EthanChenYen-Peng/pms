<h1><%= t('login') %></h1>
<div class="mt-3 p-5">
  <%= form_with(scope: :session, url: login_path, local: true) do |f|  %>
    <div class="form-group">
      <%= f.label t('activerecord.attributes.user.email') %>
      <%= f.text_field :email, class: "form-control #{ 'is-invalid' if flash.alert}"  %>
    </div>
    <div class="form-group">
      <%= f.label t('activerecord.attributes.user.password') %>
      <%= f.password_field :password, class: "form-control #{ 'is-invalid' if flash.alert}"  %>
    </div>
    <%= f.submit t('links.sessions.new'), class: 'btn btn-info' %>
  <% end %>
</div>
