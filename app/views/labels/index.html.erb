<h1>Labels</h1>
<ul class="list-group list-group-flush">
  <% @labels.each do |label| %>
    <div class="list-group-item">
      <div class="d-flex justify-content-between ">
        <div>
          <%= label.name %>
        </div> 
        <div>
          <span id="<%= "edit-btn-#{label.id}"%>">
            <%= link_to t('links.label.edit'), edit_label_path(label),  class: 'btn btn-info'  %>
          </span>
          <span id="<%= "delete-btn-#{label.id}"%>">
            <%= link_to t('links.label.delete'), label_path(label), 
              method: :delete, 
              class: 'btn btn-danger'%>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</ul>
