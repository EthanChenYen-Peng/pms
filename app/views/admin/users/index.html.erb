<div class='mt-5'>
  <h1>User management panel</h1>
  <div class='d-flex justify-content-end mb-4'>
    <%= link_to "New User", new_admin_user_path, class:'btn btn-primary' %>
  </div>
  <ul class="list-group list-group-flush">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <div class='d-flex w-100 justify-content-between'>
          <h5 class="mb-1">
            <%= link_to  user.email, admin_user_path(user) %>
            <% if user.admin? %>
              <span class='text-white bg-info p-2 rounded-lg ml-3'>Admin</span>
            <% end %>
          </h5>
          <small> <%= t('created_at') %>: <%= time_ago_in_words(user.created_at) %></small>
        </div>
        <small>
          Number of projects: <%= user.projects.size %>
        </small>
      </li>
    <% end %>
  </ul>

  <div class="my-3">
    <%= paginate @users %>
  </div>
</div>
