<div class="mt-3 p-5">
  <%= form_with(model: [:admin, user], local: true) do |f|  %>
    <% if user.errors.any? %>
      <%= render 'shared/errors', errors: user.errors %>
    <% end %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control #{'is-invalid' if user.errors[:username].any?}"  %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control #{'is-invalid' if user.errors[:email].any?}"  %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control #{'is-invalid' if user.errors[:password].any?}"  %>
    </div>
    <div class="form-group">
      <%= f.label :admin, "Is an admin?", class: 'mr-2' %>
      <%= f.check_box :admin %>
    </div>
    <%= f.submit class: 'btn btn-info' %>
  <% end %>
</div>
